using System;
class Program {
  static void Main() {
    Console.Write("высота ёлочки: ");
    int k = int.Parse(Console.ReadLine());
    for (int i = 1; i <= k; i++) {
        for (int j = 0; j < i; j++) {
        string s = new string('*', j);
        Console.WriteLine(s.PadLeft(k + 3) + "*" + s);
        }
    }
  }
}
